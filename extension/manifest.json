{
  "name": "ctrl-vk",
  "version": "0.2.0",
  "manifest_version": 2,
  "description": "Chrome extension for ctrl+v insertion of images to vk.com",

  "content_scripts": [{
    "matches": ["http://vk.com/*",
      "https://vk.com/*"],
    "js": ["javascripts/jquery-1.9.1.min.js",
      "javascripts/app.js"
    ],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [
    "javascripts/jquery-1.9.1.min.js"
  ],

  "permissions" : [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "persistent": false,
    "scripts": ["javascripts/background.js"]
  }
}
